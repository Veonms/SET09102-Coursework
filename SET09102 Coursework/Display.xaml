        mc:Ignorable="d"
        Title="Display" Height="450" Width="800">
    <Grid>
        <Label x:Name="lbl_messageType" Content="messageType" HorizontalAlignment="Left" Margin="39,29,0,0" VerticalAlignment="Top" Height="47" Width="164" FontSize="24" FontWeight="Bold"/>
        <Label x:Name="lbl_messageHeader" Content="messageHeader" HorizontalAlignment="Left" Margin="39,81,0,0" VerticalAlignment="Top" Width="152" FontSize="18"/>
        <TextBlock x:Name="txtblk_body" HorizontalAlignment="Left" Margin="39,153,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="187" Width="230"/>
        <Label Content="Message Body:" HorizontalAlignment="Left" Margin="39,124,0,0" VerticalAlignment="Top" Width="118" FontSize="14" FontWeight="Bold"/>
        <Button x:Name="btn_NextMssage" Content="Next Message" HorizontalAlignment="Left" Margin="341,356,0,0" VerticalAlignment="Top" Width="103" Height="32" FontSize="14" Click="btn_NextMssage_Click"/>
        <Button Content="Export" HorizontalAlignment="Left" Margin="554,356,0,0" VerticalAlignment="Top" Width="103" Height="32" FontSize="14" Click="Button_Click_1"/>
