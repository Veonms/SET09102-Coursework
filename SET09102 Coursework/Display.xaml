        <Label x:Name="lbl_URLHash" Content="URLs Quarantined/Hashtags" HorizontalAlignment="Left" Margin="461,81,0,0" VerticalAlignment="Top" FontSize="14" FontWeight="Bold"/>
        <Label x:Name="lbl_SIRMen" Content="Significant Incident Report/Mentions" HorizontalAlignment="Left" Margin="461,198,0,0" VerticalAlignment="Top" FontSize="14" FontWeight="Bold"/>
        <TextBlock x:Name="txtblk_SIGMen" HorizontalAlignment="Left" Margin="461,232,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="79" Width="269"/>
        <Button Content="Main Menu" HorizontalAlignment="Left" Margin="100,356,0,0" VerticalAlignment="Top" Width="103" Height="32" Click="Button_Click" FontSize="14"/>

    </Grid>
</Window>
